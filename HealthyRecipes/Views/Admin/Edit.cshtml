@model Recipe
@{
    ViewBag.Title = "Healthy Recipe | Edit Recipe";
    Layout = "_AdminLayout";
}
<div class="container-fluid">
    <div class="row justify-content-center">
        
        <div class="col-9">
            <h2 class="text-center" style="margin-top:50px;">Edit Recipe</h2>
            <form asp-action="Edit" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="RecipeID" />
                <input type="hidden" asp-for="LastEdit" />
               
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="Name">Recipe Name:</label>
                        <div><span asp-validation-for="Name" class="text-danger"></span></div>
                        <input asp-for="Name" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="ImageUrl">Image Url:</label>
                        <div><span asp-validation-for="ImageUrl" class="text-danger"></span></div>
                        <input asp-for="ImageUrl" class="form-control" />
                    </div>
                    <div>
                        <table class="table">
                            <tr>
                                <td>
                                    <label asp-for="CookingTime">Cooking Time:</label>
                                </td>
                                <td>
                                    <label asp-for="Category">Category:</label>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div><span asp-validation-for="CookingTime" class="text-danger"></span></div>
                                </td>
                                <td>
                                    <div><span asp-validation-for="Category" class="text-danger"></span></div>
                                </td>
                            </tr>
                            <tr>
                                <td>

                                    <input asp-for="CookingTime" class="form-control" min="1" />
                                </td>
                                <td>
                                    <input asp-for="Category" class="form-control"  />
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div>
                        <table class="table table-striped">
                            <tr>
                                <td>Ingredients</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>  <div><span asp-validation-for="Ingredient1" class="text-danger"></span></div></td>
                                <td>
                                    <div><span asp-validation-for="Ingredient2" class="text-danger"></span></div>
                                </td>
                            </tr>
                            <tr>

                                <td>


                                    <input asp-for="Ingredient1" class="form-control" />
                                </td>
                                <td>

                                    <input asp-for="Ingredient2" class="form-control" />
                                </td>
                            </tr>

                            <tr>
                                <td> <div><span asp-validation-for="Ingredient3" class="text-danger"></span></div></td>
                                <td> <div><span asp-validation-for="Ingredient4" class="text-danger"></span></div></td>
                            </tr>
                            <tr>
                                <td>

                                    <input asp-for="Ingredient3" class="form-control" />
                                </td>
                                <td>

                                    <input asp-for="Ingredient4" class="form-control" />
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>
                                    <div><span asp-validation-for="Ingredient5" class="text-danger"></span></div>
                                    <input asp-for="Ingredient5" class="form-control" />
                                </td>
                                <td>
                                    <div><span asp-validation-for="Ingredient6" class="text-danger"></span></div>
                                    <input asp-for="Ingredient6" class="form-control" />
                                </td>
                            </tr>

                        </table>
                        <div class="form-group">
                            <label asp-for="Instructions">Cooking Instructions:</label>
                            <div><span asp-validation-for="Instructions" class="text-danger"></span></div>
                            <textarea asp-for="Instructions" class="form-control" rows="5" id="cInstructions" resize="fixed"></textarea>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-outline-secondary" type="submit" >Save</button>
                            <a asp-action="DataPage" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>
</div>
