@model ReviewViewModel
@{
    ViewBag.Title = "Healthy Recipes | Add Review";
    Layout = "_AdminLayout";
}


<div class="container" style="margin-top:100px;">
    <div class="row justify-content-center">
        <div class="col-9">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="AddReview" asp-controller="Admin" method="post">

                <input type="hidden" asp-for="@Model.RecipeID" />
                <input type="hidden" asp-for="@Model.Review.ReviewID" />
                <div class="form-group">
                    <h4 class="h4 text-capitalize text-center">Add Review</h4>
                    <div class="form-group">
                        <label asp-for="@Model.Review.RecipeRating">Rating : </label>
                        1
                        @Html.RadioButtonFor(model => model.Review.RecipeRating, 1)
                        2
                        @Html.RadioButtonFor(model => model.Review.RecipeRating, 2)
                        3
                        @Html.RadioButtonFor(model => model.Review.RecipeRating, 3)
                        4
                        @Html.RadioButtonFor(model => model.Review.RecipeRating, 4)
                        5
                        @Html.RadioButtonFor(model => model.Review.RecipeRating, 5)
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Review.Title">Review Title:</label><span asp-validation-for="Review.Title" class="text-danger"></span>
                        <input asp-for="@Model.Review.Title" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Review.ReviewDescription">Review:</label><span asp-validation-for="Review.ReviewDescription" class="text-danger"></span>
                        <textarea asp-for="@Model.Review.ReviewDescription" class="form-control" rows="5" id="review" resize="fixed"></textarea>
                    </div>
                    <div class="form-group" style="float:right">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                        <a class="btn btn-danger" asp-action="DataPage" asp-controller="Admin">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>