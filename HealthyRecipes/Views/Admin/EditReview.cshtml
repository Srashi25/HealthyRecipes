@model ReviewViewModel
@{
    ViewBag.Title = "Healthy Recipes | Edit Review";
    Layout = "_AdminLayout";
}


<div class="container" style="margin-top:100px;">
    <div class="row justify-content-center">
        <div class="col-9">
            <form asp-action="EditReview" asp-controller="Admin" method="post">
                <input type="hidden" asp-for="@Model.RecipeID" />
                <input type="hidden" asp-for="@Model.Review.ReviewID" />
                <div class="form-group">
                    <h4 class="h4 text-capitalize text-center">Edit Review</h4>
                    <div class="form-group">
                        <label asp-for="@Model.Review.Title">Title:</label><span asp-validation-for="Review.Title" class="text-danger"></span>
                        <input asp-for="@Model.Review.Title" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Review.ReviewDescription">Review:</label><span asp-validation-for="Review.ReviewDescription" class="text-danger"></span>
                        <textarea asp-for="@Model.Review.ReviewDescription" class="form-control" rows="5" id="review" resize="fixed"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-secondary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>